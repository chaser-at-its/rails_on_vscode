{
  "ruby.codeCompletion": "rcodetools",
  "ruby.intellisense": "rubyLocate",
  "ruby.lint": {
      "reek": true,
      "rubocop": true,
      "ruby": true,
      "fasterer": true,
      "debride": true,
      "ruby-lint": true
  },
  "solargraph.commandPath": "/usr/local/bundle/bin/solargraph",
